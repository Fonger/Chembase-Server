{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch in WSL",
            "useWSL": true,
            "program": "${workspaceFolder}/src/index.js",
            "autoAttachChildProcesses": true,
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js"
            ]
        }
    ]
}