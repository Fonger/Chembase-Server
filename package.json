{
  "name": "chembaseserver",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "start": "nodemon src/index.js --ignore sdk/",
    "sdk": "budo sdk/index.js:chembase-sdk.js --live --dir sdk --ssl --cert ~/chembase-cert.pem --key ~/chembase-key.pem",
