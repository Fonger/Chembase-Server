    "test": "npm run linter",
    "commit": "git-cz"
  },
  "author": {
    "name": "Fonger",
    "url": "https://github.com/Fonger"
  },
  "license": "ISC",
  "dependencies": {
    "balanced-match": "^1.0.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.18.3",
    "bson": "^3.0.2",
    "bson-ext": "^2.0.1",
    "bson-fast-deep-equal": "github:Fonger/bson-fast-deep-equal",
    "buffer": "^5.2.0",
    "clone-deep": "^4.0.0",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "ioredis": "3.2.2",
    "is-plain-object": "^2.0.4",
    "jsep": "^0.3.4",
    "jsonwebtoken": "^8.3.0",
    "ldapauth-fork": "^4.0.2",
    "mongo-parse": "^2.1.0",
